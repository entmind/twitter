<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
    <% if @tweet.errors.any? %>
        <div id="error_explanation">
            <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
            
            <ul>
                <% @tweet.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <!-- <%= f.label :content %> -->
    <p>ツイート<%= f.text_field :content, class: 'form-control' %></p>
    <br>
    <%= f.submit "ツイートを投稿する", class: 'btn btn-block btn-success' %>
<% end %>


<br><br><br><br><br><br>
